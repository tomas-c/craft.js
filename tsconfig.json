{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "paths": {
      "@tomas-c/craftjs-core": ["packages/core/src/index"],
      "@tomas-c/craftjs-core/*": ["packages/core/src/*"],
      "@tomas-c/craftjs-layers": ["packages/layers/src/index"],
      "@tomas-c/craftjs-utils": ["packages/utils/src/index"],
      "@tomas-c/craftjs-utils/*": ["packages/utils/src/*"]
    }
  },
  "exclude": ["**/node_modules/**", "cypress"]
}
